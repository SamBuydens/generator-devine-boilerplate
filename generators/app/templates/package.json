{
  "name": "boilerplate-spa",
  "version": "0.1.0",
  "description": "boilerplate for a SPA",
  "scripts": {
    "development": "yarn run clean && <% if (node) { %>nodemon . & NODE_ENV=development webpack --watch<% } else { %>NODE_ENV=development webpack-dev-server<% } %>",<% if (node) { %>
    "start": "yarn run serve",
    "serve": "forever .",<% } %>
    "clean": "rimraf <% if (node) { %>./server/public/<% } else { %>./dist<% } %>",
    "production": "yarn run clean && NODE_ENV=production webpack -p"<% if (jest) { %>,
    "test": "jest"<% } %>
  },
  <% if (node) { %>"main": "server/index.js",
  <% } %>"author": "Geoffrey Dhuyvetters",
  "license": "MIT",<% if (node) { %>
  "dependencies": {
    "dotenv": "^2.0.0",
    "forever": "^0.15.2",
    "hapi": "^15.1.1",
    "inert": "^4.0.2"
  },<% } %>
  "devDependencies": {
    "babel-core": "^6.17.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-lodash": "^3.2.9",
    <% if (react) { %>"babel-plugin-transform-react-jsx-source": "^6.9.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.2.10",
    <% } %>"babel-preset-es2015": "^6.16.0",
    <% if (react) { %>"babel-preset-react": "^6.16.0",
    <% } %>"babel-preset-stage-0": "^6.16.0",
    "copy-webpack-plugin": "^3.0.1",
    "css-loader": "^0.25.0",
    "eslint": "^3.7.1",
    "eslint-config-devine": "^1.0.2",
    "eslint-loader": "^1.5.0",
    "extract-text-webpack-plugin": "beta",
    "file-loader": "^0.9.0",
    "html-loader": "^0.4.4",
    "image-webpack-loader": "^3.0.0",
    <% if (jest) { %>"jest": "^16.0.2",
    <% } %><% if (node) { %>"nodemon": "^1.11.0",
    <% } %>"postcss-cssnext": "^2.8.0",
    "postcss-loader": "^1.0.0",
    "postcss-reporter": "^1.4.1",
    <% if (react) { %>"react": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-router": "next",
    <% } %><% if (!node) { %>"react-dev-utils": "^0.2.1",
    <% } %>"rimraf": "^2.5.4",
    "style-loader": "^0.13.1",
    "stylelint": "^7.5.0",
    "stylelint-config-devine": "^1.0.0",
    "url-loader": "^0.5.7",
    "webpack": "beta",
    "webpack-config-htmls": "^1.0.1"
  }
}
