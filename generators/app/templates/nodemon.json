{

  "ext": "js, jsx, <% if (hbs_server) { %>handlebars, hbs ,<% } %> json, html",

  "watch": [<% if (hbs_server) { %>
    "/helpers/*",
    "/templates/*",<% } %>
    "/modules/*",
    "/plugins/*",
    "/models/*",
    "/routes/*"
  ],

  "ignore": [<% if (hbs_client) { %>
    "/_hbs/*",<% } %><% if (hbs_server) { %>
    "/_helpers/*",<% } %>
    "/_js/*",
    "/_scss/*",
    "/node_modules/*",
    "/public/*",
    "_config.js",
    "gulpfile.js",
    "package.json",
    "webpack.config.js"
  ]

}
